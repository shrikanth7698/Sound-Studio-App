<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="#ffffff"
	tools:context=".PortfolioActivity">
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fillViewport="true">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">
			<ImageView
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:padding="5dp"
				android:tint="#000000"
				android:id="@+id/backIV"
				android:clickable="true"
				android:foreground="?android:selectableItemBackground"
				android:layout_marginStart="10dp"
				android:layout_marginTop="10dp"
				app:srcCompat="@drawable/ic_arrow_back_black_24dp"/>
			<androidx.cardview.widget.CardView
				android:layout_width="160dp"
				android:layout_height="160dp"
				app:cardElevation="0dp"
				android:layout_marginBottom="10dp"
				app:cardBackgroundColor="#ffffff"
				android:layout_gravity="center"
				app:cardCornerRadius="80dp">
				<ImageView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:id="@+id/userImageIV"
					android:src="@drawable/shrikanth_profile"
					android:transitionName="userImageTrans"
					android:scaleType="centerCrop"/>
			</androidx.cardview.widget.CardView>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:layout_gravity="center"
				android:text="Shrikanth Ravi"
				android:id="@+id/nameTV"
				android:singleLine="true"
				android:ellipsize="end"
				android:fontFamily="@font/open_sans_bold"
				android:textColor="#000000"
				android:textSize="23dp"
				android:layout_marginStart="16dp"
				android:layout_marginEnd="16dp"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="Android Developer"
				android:singleLine="true"
				android:ellipsize="end"
				android:id="@+id/workTV"
				android:fontFamily="@font/open_sans"
				android:textColor="#000000"
				android:textSize="14dp"
				android:layout_marginStart="16dp"
				android:layout_marginEnd="16dp"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:layout_marginBottom="8dp"
				android:layout_marginTop="10dp">
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginStart="8dp"
					android:layout_marginEnd="8dp"
					android:orientation="horizontal">
					<androidx.cardview.widget.CardView
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_margin="12dp"
						app:cardCornerRadius="10dp"
						android:id="@+id/linkCV1"
						app:cardBackgroundColor="#333333"
						android:clickable="true"
						android:foreground="?selectableItemBackgroundBorderless"
						android:layout_weight="1">
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:padding="10dp"
							android:orientation="vertical">
							<ImageView
								android:layout_width="20dp"
								android:layout_height="20dp"
								android:src="@drawable/github_icon"
								android:tint="@android:color/white"
								android:id="@+id/iconIV1"/>
							<View
								android:layout_width="wrap_content"
								android:layout_height="30dp"
								android:layout_weight="1"/>
							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="Github"
								android:textSize="14dp"
								android:id="@+id/linkTitleTV1"
								android:fontFamily="@font/open_sans_bold"
								android:textColor="#ffffff"/>
							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/github_link"
								android:singleLine="true"
								android:ellipsize="end"
								android:id="@+id/linkTV1"
								android:textSize="12dp"
								android:fontFamily="@font/open_sans"
								android:textColor="#f2f2f2"/>

						</LinearLayout>
					</androidx.cardview.widget.CardView>

					<androidx.cardview.widget.CardView
						android:id="@+id/linkCV2"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_margin="12dp"
						android:layout_weight="1"
						app:cardBackgroundColor="#0e76a8"
						android:clickable="true"
						android:foreground="?selectableItemBackgroundBorderless"
						app:cardCornerRadius="10dp">
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:padding="10dp"
							android:orientation="vertical">
							<ImageView
								android:layout_width="20dp"
								android:layout_height="20dp"
								android:src="@drawable/linkedin_icon"
								android:tint="@android:color/white"
								android:id="@+id/iconIV2"/>
							<View
								android:layout_width="wrap_content"
								android:layout_height="30dp"
								android:layout_weight="1"/>
							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="Linkedin"
								android:textSize="14dp"
								android:id="@+id/linkTitleTV2"
								android:fontFamily="@font/open_sans_bold"
								android:textColor="#ffffff"/>
							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/linkedin_link"
								android:singleLine="true"
								android:ellipsize="end"
								android:id="@+id/linkTV2"
								android:textSize="12dp"
								android:fontFamily="@font/open_sans"
								android:textColor="#f2f2f2"/>

						</LinearLayout>

					</androidx.cardview.widget.CardView>

				</LinearLayout>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginStart="8dp"
					android:layout_marginEnd="8dp"
					android:orientation="horizontal"
					android:layout_weight="1">
					<androidx.cardview.widget.CardView
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_margin="12dp"
						app:cardCornerRadius="10dp"
						app:cardBackgroundColor="#F7494D"
						android:clickable="true"
						android:id="@+id/linkCV3"
						android:foreground="?selectableItemBackgroundBorderless"
						android:layout_weight="1">
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:padding="10dp"
							android:orientation="vertical">
							<ImageView
								android:layout_width="20dp"
								android:layout_height="20dp"
								android:src="@drawable/dribbble_icon"
								android:tint="@android:color/white"
								android:id="@+id/iconIV3"/>
							<View
								android:layout_width="wrap_content"
								android:layout_height="30dp"
								android:layout_weight="1"/>
							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="Website"
								android:textSize="14dp"
								android:id="@+id/linkTitleTV3"
								android:fontFamily="@font/open_sans_bold"
								android:textColor="#ffffff"/>
							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/portfolio_link"
								android:singleLine="true"
								android:ellipsize="end"
								android:id="@+id/linkTV3"
								android:textSize="12dp"
								android:fontFamily="@font/open_sans"
								android:textColor="#f2f2f2"/>

						</LinearLayout>

					</androidx.cardview.widget.CardView>
					<androidx.cardview.widget.CardView
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_margin="12dp"
						app:cardCornerRadius="10dp"
						app:cardBackgroundColor="#3b5998"
						android:clickable="true"
						android:id="@+id/linkCV4"
						android:foreground="?selectableItemBackgroundBorderless"
						android:layout_weight="1">
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:padding="10dp"
							android:orientation="vertical">
							<ImageView
								android:layout_width="20dp"
								android:layout_height="20dp"
								android:visibility="invisible"
								android:src="@drawable/dribbble_icon"
								android:tint="@android:color/white"
								android:id="@+id/iconIV4"/>
							<View
								android:layout_width="wrap_content"
								android:layout_height="10dp"
								android:layout_weight="1"/>
							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="Please refer my github for all my projects."
								android:textSize="14dp"
								android:id="@+id/linkTitleTV4"
								android:fontFamily="@font/open_sans_bold"
								android:textColor="#ffffff"/>
							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/portfolio_link"
								android:singleLine="true"
								android:visibility="gone"
								android:ellipsize="end"
								android:id="@+id/linkTV4"
								android:textSize="12dp"
								android:fontFamily="@font/open_sans"
								android:textColor="#f2f2f2"/>

						</LinearLayout>

					</androidx.cardview.widget.CardView>

				</LinearLayout>

			</LinearLayout>

		</LinearLayout>
	</ScrollView>
</LinearLayout>